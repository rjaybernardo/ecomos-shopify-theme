{{ 'section-rich-text.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}
<style>
  .revenue-header {
    font-size: 62px;
    max-width: 700px;
    margin: 0 auto;
    font-style: normal;
    font-weight: 400;
    line-height: normal;
  }
  .revenue-text {
    max-width: 560px;
    margin: 10px auto 0 !important;
  }
  .revenue-gradient {
    background: linear-gradient(90deg, #f4dca8 59.9%, #f5be66 66.33%, #ff8038 72.66%, #ff38bb 79.5%);
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    font-size: 18px;
    line-height: 140%;
  }
  .revenue-button {
    padding: 10px;
    border-radius: 3px;
    border: 1px dashed #f5be66;
    background: #ffefcd;
    color: #111111;
  }
  .revenue-card-container {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 3%;
    margin: 50px auto 40px;
    max-width: 1300px;
  }
  .revenue-card {
    display: flex;
    flex-direction: column;
    align-items: center;
    border-radius: 15px;
    border: 1px solid rgba(51, 51, 51, 0.5);
    background: rgba(36, 36, 36, 0.5);
    box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.25);
    padding: 20px 40px;
    text-align: center;
  }
  .revenue-card-header {
    font-size: 24px;
    font-style: normal;
    font-weight: 400;
    line-height: normal;
    margin-bottom: 10px !important;
  }
  .revenue-card-text {
    font-size: 16px;
    font-style: normal;
    font-weight: 400;
    line-height: 140%;
  }
  .revenue-card-icon {
    height: 78px;
    width: 78px;
    margin-bottom: 20px;
  }
  .revenue-card-icons {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 5%;
  }
  .revenue-card-icons img {
    width: 100%;
  }
</style>

<div class="isolate{% unless section.settings.full_width %} page-width{% endunless %}">
  <div class="rich-text content-container color-{{ section.settings.color_scheme }} gradient{% if section.settings.full_width %} rich-text--full-width content-container--full-width{% endif %} section-{{ section.id }}-padding">
    <div class="rich-text__wrapper rich-text__wrapper--{{ section.settings.desktop_content_position }}{% if section.settings.full_width %} page-width{% endif %}">
      <div class="rich-text__blocks {{ section.settings.content_alignment }}">
        <h2
          class="revenue-header rich-text__heading rte inline-richtext {{ block.settings.heading_size }}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
          {{ block.shopify_attributes }}
          {% if settings.animations_reveal_on_scroll %}
            data-cascade
            style="--animation-order: {{ forloop.index }};"
          {% endif %}
        >
          {{ section.settings.heading }}
        </h2>

        <div
          class="revenue-text rich-text__text rte{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
          {{ block.shopify_attributes }}
          {% if settings.animations_reveal_on_scroll %}
            data-cascade
            style="--animation-order: {{ forloop.index }};"
          {% endif %}
        >
          {%- if section.settings.text == blank -%}
            We can help you drop your new customer CPA by 30% or more. How? By using a high converting
            <span class="revenue-gradient">landing page</span>.
          {%- else -%}
            {{ section.settings.text }}
          {%- endif -%}
        </div>
      </div>
    </div>
    <div>
      <div class="revenue-card-container">
        {% for block in section.blocks %}
          <div class="revenue-card">
            <div class="revenue-card-icon">
              <lottie-player
                autoplay
                loop
                mode="normal"
                src="{{ "flow" | append: forloop.index | append: ".json" | asset_url }}"
                style="width: 78px"
              >
              </lottie-player>
            </div>
            <div class="revenue-card-header">{{ block.settings.header }}</div>
            <div class="revenue-card-text">{{ block.settings.text }}</div>
            <div class="revenue-card-icons">
              {% if block.settings.agency %}
                <img
                  src="{{ block.settings.agency | image_url }}"
                  alt="agency logo"
                  height="71"
                  width="157"
                  loading="lazy"
                >
              {% endif %}
              {% if block.settings.expert %}
                <img
                  src="{{ block.settings.expert | image_url }}"
                  alt="expert logo"
                  height="71"
                  width="157"
                  loading="lazy"
                >
              {% endif %}
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "EcomOs Revenue",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Pricing Section Header",
      "default": "Maximize revenue for every website visitor."
    },
    {
      "type": "text",
      "id": "text",
      "label": "Pricing Section Text"
    },
    {
      "type": "select",
      "id": "desktop_content_position",
      "options": [
        {
          "value": "left",
          "label": "t:sections.rich-text.settings.desktop_content_position.options__1.label"
        },
        {
          "value": "center",
          "label": "t:sections.rich-text.settings.desktop_content_position.options__2.label"
        },
        {
          "value": "right",
          "label": "t:sections.rich-text.settings.desktop_content_position.options__3.label"
        }
      ],
      "default": "center",
      "label": "t:sections.rich-text.settings.desktop_content_position.label",
      "info": "t:sections.rich-text.settings.desktop_content_position.info"
    },
    {
      "type": "select",
      "id": "content_alignment",
      "options": [
        {
          "value": "left",
          "label": "t:sections.rich-text.settings.content_alignment.options__1.label"
        },
        {
          "value": "center",
          "label": "t:sections.rich-text.settings.content_alignment.options__2.label"
        },
        {
          "value": "right",
          "label": "t:sections.rich-text.settings.content_alignment.options__3.label"
        }
      ],
      "default": "center",
      "label": "t:sections.rich-text.settings.content_alignment.label"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "background-1"
    },
    {
      "type": "checkbox",
      "id": "full_width",
      "default": true,
      "label": "t:sections.rich-text.settings.full_width.label"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 52
    }
  ],
  "blocks": [
    {
      "type": "revenue-card",
      "name": "Revenue Card",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Card Icon"
        },
        {
          "type": "text",
          "id": "header",
          "label": "Card Header",
          "default": "header"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Card Text",
          "default": "paragraph text"
        },
        {
          "type": "image_picker",
          "id": "agency",
          "label": "Agency logo"
        },
        {
          "type": "image_picker",
          "id": "expert",
          "label": "Expert logo"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "EcomOs Revenue",
      "blocks": []
    }
  ]
}
{% endschema %}
